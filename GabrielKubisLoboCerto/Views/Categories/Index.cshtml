@model IEnumerable<Models.Tables.Category>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "List Categories";
}
<div class="panel	panel-primary">
    <div class="panel-heading">
        List of Registered Categories
    </div>
    <div class="panel-body">
        <table class="table	table-striped	table-hover">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId })	|
                            @Html.ActionLink("Details", "Details", new { id = item.CategoryId })	|
                            @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer	panel-info">
        @Html.ActionLink("Register a new Category", "Create", null, new { @class = "btn btn-success" })
    </div>
</div>
@section styles{
    <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />
}
@section ScriptPage	{
    <script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').dataTable();
        });
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liCategories').addClass("active");
        });
    </script>
}